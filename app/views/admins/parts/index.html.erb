<h2>パート一覧</h2>
<!-- バリデーションのエラーメッセージ -->
<%= render "/layouts/error_messages", model: @part %>

<!-- パート追加フォーム -->
<%= render "layouts/admin_add_form", { scope: :part, model: Part.new, action: admins_parts_path } %>

<table class="table table-hover table-inverse mt-3 bg-white">
  <thead class="thead-light">
    <tr>
      <th>パート名</th>
      <th>登録日</th>
      <th>更新日</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody id="part_lists">
    <%= render @parts %>
  </tbody>
</table>

<!-- もっと見るボタン -->
<%= render "layouts/and_more_button", { model: @parts } %>
