<% path = admin_signed_in? ? admins_article_path(article) : article %>
<tr>
  <td>
    <%= link_to (attachment_image_tag article.member, :profile_image, :fill, 30, 30, format: 'jpeg',
    fallback: "no_image.jpg", size: 30), path %>
  </td>
  <td><%= article.subject %></td>
  <td><%= article.member.name %><td>
  <td><%= article.member.address_prefecture %></td>
  <td><%= article.member.age %><span>歳</span></td>
  <td><%= article.member.gender %></td>
  <td><%= article.updated_at.strftime("%Y年%-m月%-d日(%a) %H:%M") %></td>

  <% if admin_signed_in? %>
    <td><%= article.status %></td>
  <% end %>

  <% if article.member == current_member || admin_signed_in? %>
    <td><%= link_to "編集", path %></td>
    <td><%= link_to "削除", path, method: :delete, data: { confirm: "本当に削除してもよろしいですか？" } %></td>
  <% end %>
</tr>