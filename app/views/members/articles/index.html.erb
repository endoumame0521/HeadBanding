<!-- 記事新規投稿ページへのリンク -->
<div class="row">
  <div class="col-6">
    <!-- 記事検索フォーム -->
    <%= render "members/articles/search_form", { search_params: @search_params, admin_flag: false } %>
      </div>
      <div class="col-6 text-right mt-2">
    <%= link_to new_article_path do %>
      <i class="fas fa-plus-circle fa-3x faa-shake animated-hover" style="color: #F99292;"></i>
    <% end %>
  </div>
</div>

<h2>バンド記事一覧</h2>

<div class="row">
  <!-- 記事一覧 -->
  <div id="article_lists" class="col-lg-12">
    <!-- kaminariでページネーションのため部分テンプレート化 -->
    <%= render "members/articles/article_lists", { articles: @articles } %>
  </div>
</div>

<!-- もっと見るボタン -->
<div class="w-100 text-center mx-auto">
  <%= link_to_next_page @articles, 'もっと見る', remote: true, id: 'view_more', class: "m-5 btn btn-primary", style: "color: white;" %>
</div>
