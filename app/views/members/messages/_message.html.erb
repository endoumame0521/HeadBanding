<!--②左コメント始-->
<div class="balloon6">
  <%= link_to member_path(message.member) do %>
    <div class="faceicon">
      <%= attachment_image_tag message.member, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: 50 %>
    </div>
  <% end %>
  <div class="chatting">
    <div class="says">
      <p><%= message.body %></p>
    </div>
    <p><%= message.created_at.strftime("%Y年%-m月%-d日(%a) %H:%M") %></p>
  </div>
</div>
<!--②/左コメント終-->
