<h2>フォロー</h2>

<% if @members.exists? %>
  <div class="row" id="follower_lists">
    <!-- フォロワー一覧 -->
    <%= render "members/members/member_lists", { members: @members }  %>
  </div>
<% else %>
  <p>フォローしている人はいません</p>
<% end %>

<!-- もっと見るボタン -->
<div class="w-100 text-center mx-auto">
  <%= link_to_next_page @members, 'もっと見る', remote: true, id: 'view_more', class: "m-5 btn btn-primary", style: "color: white;" %>
</div>