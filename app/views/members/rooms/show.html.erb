<h2 id="room" data-room_id="<%= @room.id %>" data-member_id="<%= current_member.id %>"><%= @member.name %>さんとのメッセージ</h2>
<div class="row justify-content-end">
<div class="col-6">
  <form>
    <label>メッセージ:</label><br>
    <textarea id="chat-input" data-behavior="room_speaker" placeholder="メッセージを入力" class="form-control" rows="6"></textarea>
  </form>
</div>
</div>

<div class="line-bc" id="messages">
  <!-- kaminariでページネーションのため部分テンプレート化 -->
  <%= render "members/messages/message_lists", { messages: @messages } %>
</div>

<!-- もっと見るボタン -->
<div class="w-100 text-center mx-auto">
  <%= link_to_next_page @messages, 'もっと見る', remote: true, id: 'view_more', class: "m-5 btn btn-primary", style: "color: white;" %>
</div>