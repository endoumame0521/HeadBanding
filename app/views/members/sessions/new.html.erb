<div class="row justify-content-center">
  <div class="col-lg-10">

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label(:email, Member.human_attribute_name(:email)) %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

  <div class="field">
    <%= f.label(:password, Member.human_attribute_name(:password)) %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary mb-5" %>
  </div>
<% end %>

<%= render "members/shared/links" %>


</div>
</div>
