<h2>Memberツイート詳細</h2>

<!-- バリデーションのエラーメッセージ -->
<%= render "/layouts/error_messages", model: @tweet %>

<table cellspacing="5">
  <tbody>
    <!-- ツイートの詳細 -->
    <%= render "tweet", { tweet: @tweet, tweet_flag: true } %>

    <!-- ツイートに対するコメント一覧 -->
    <% @tweet.tweet_comments.each do |tweet| %>
      <%= render partial: "tweet", locals: { tweet: tweet, tweet_flag: false } %>
    <% end %>
  </tbody>
</table>

<!-- コメント投稿フォーム -->
<%= render "form", { tweet: @tweet, tweet_flag: false } %>